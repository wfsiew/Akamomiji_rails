<table>
  <tr>
    <td>
      <%= label_tag :id_name, 'Name', :class => 'label' %>
    </td>
    <td class="colspacing">
      <%= text_field_tag :name, nil, :id => 'id_name', :class => 'search', :placeholder => 'type here to search', 
                         :title => 'type here to search' %>
    </td>
    <td>
      <%= label_tag :id_status, 'Status', :class => 'label' %>
    </td>
    <td class="colspacing">
      <select id="id_status" class="select">
        <option value="0">All</option>
        <%= options_for_select(@status_list) %>
      </select>
    </td>
  </tr>
</table>
<br />
<% @include_search = true %>
<%= render 'shared/panel_button' %>
