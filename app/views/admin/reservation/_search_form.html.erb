<table>
  <tr>
    <td>
      <%= label_tag :id_query_date, 'Date', :class => 'label' %>
    </td>
    <td class="colspacing">
      <%= text_field_tag :reserve_date, nil, :id => 'id_query_date', :class => 'search date_input', :placeholder => 'dd-mm-YYYY' %>
    </td>
    <td>
      <%= label_tag :id_query_time, 'Time', :class => 'label' %>
    </td>
    <td>
      <%= text_field_tag :reserve_time, nil, :id => 'id_query_time', :class => 'search', :placeholder => 'hh:mm', 
                         :title => '24 hour time format, e.g 23:59' %>
    </td>
  </tr>
  <tr>
    <td>
      <%= label_tag :id_query_name, 'Name', :class => 'label' %>
    </td>
    <td class="colspacing">
      <%= text_field_tag :name, nil, :id => 'id_query_name', :class => 'search', :placeholder => 'type here to search', 
                         :title => 'type here to search' %>
    </td>
    <td>
      <%= label_tag :id_query_location, 'Location', :class => 'label' %>
    </td>
    <td class="colspacing">
      <select id="id_query_location" class="select">
        <option value="0">All</option>
        <%= options_for_select(@location_list) %>
      </select>
    </td>
  </tr>
</table>
<br />
<% @include_search = true %>
<%= render 'shared/panel_button' %>
